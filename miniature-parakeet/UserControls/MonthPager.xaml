<UserControl x:Class="miniature_parakeet.UserControls.MonthPager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:miniature_parakeet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <TextBlock>&lt; <Bold>Jan</Bold></TextBlock>
        </StackPanel>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center"><Bold>Feb</Bold></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Column="2">
            <TextBlock>&gt; <Bold>Mar</Bold></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
